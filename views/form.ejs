<!DOCTYPE html>
<html>
<head>
  <title><%= form.name %></title>
  <link rel="stylesheet" href="/css/style.css" />
  <script src="/socket.io/socket.io.js"></script>
</head>
<body>
  <div class="container">
    <h2><%= form.name %></h2>
    <form id="collabForm">
      <% fields.forEach(field => { %>
        <div class="form-group">
          <label><%= field.field_name %>:</label>

          <% if (field.field_type === 'dropdown') { %>
            <select name="field_<%= field.id %>" data-id="<%= field.id %>" class="form-control">
              <% field.field_options.split(',').forEach(opt => { %>
                <option value="<%= opt.trim() %>"><%= opt.trim() %></option>
              <% }) %>
            </select>

          <% } else { %>
            <input
              name="field_<%= field.id %>"
              type="<%= field.field_type === 'number' ? 'number' : 'text' %>"
              data-id="<%= field.id %>"
              class="form-control"
              placeholder="Enter <%= field.field_name %>"
            />
          <% } %>
        </div>
      <% }) %>
    </form>
  </div>

  <script>
    const socket = io();

    document.querySelectorAll('[data-id]').forEach(el => {
      el.addEventListener('input', () => {
        const id = el.getAttribute('data-id');
        const value = el.value;
        socket.emit('field-update', { id, value });
      });
    });

    socket.on('update-field', ({ id, value }) => {
      const input = document.querySelector(`[data-id='${id}']`);
      if (input && input.value !== value) {
        input.value = value;
      }
    });
  </script>
</body>
</html>
